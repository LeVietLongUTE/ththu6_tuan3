<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/img1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lê Việt Long"
        android:textSize="35dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textcolor1"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1811505310124"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textcolor1"></TextView>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/backgroud"
            android:drawableLeft="@drawable/ic_user"
            android:hint="Mời Nhập userName"
            android:padding="10dp"
            android:textSize="25dp"
           android:textColorHint="@color/colorPrimary"
            ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/backgroud"
        android:drawableLeft="@drawable/ic_pass"
        android:hint="Mời Nhập Password"
        android:padding="10dp"
        android:drawableRight="@drawable/ic_check"
        android:textColorHint="@color/colorPrimary"
        android:textSize="25dp"></EditText>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/colorPrimaryDark">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:background="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"></Button>


    </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't Remember Password?"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"></TextView>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:background="#002200"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            ></View>
        <TextView
            android:text="or"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
           android:layout_gravity="center_horizontal"
            android:textSize="20dp"></TextView>
        <View
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:background="#002200"
           android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            ></View>
    </GridLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with Facebook"
            android:textSize="30dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="50dp"
            android:drawableLeft="@drawable/ic_ls"
            android:layout_gravity="center_horizontal"></TextView>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#fff"
        android:layout_marginTop="5dp"
        ></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:text="Don't have an account?"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"></TextView>

    </LinearLayout>
